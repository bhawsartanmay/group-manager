<p id="notice"><%= notice %></p>
<div class="card">
	<h2><%= @group.name %></h2>
  <div class="card-header">Create Notices</div>
  <div class="card-body">
  	<%= form_for(@notice, url: group_notices_path(params[:id]), method: :post) do |f| %>
	    <div class="form-group row">
	    	Topic Title:
	      <div class="col-lg-10">
	        <%= f.text_area :title, class: "form-control", cols: "30", rows: "5", placeholder: "Enter Title" %> <br />
	        <%= f.submit %>
	      </div>
	    </div>
  	<% end %>
  </div> 
</div>
<div class="card">
  <div class="card-header">Notices</div>
  <div class="card-body">
    <table id="group-notice" class="table table-striped table-bordered" style="width:100%">
      <thead>
          <tr>
              <th>Topic</th>
              <th>Posted By</th>
              <th>Posted By</th>
          </tr>
      </thead>
      <tbody>
        <% @notices.each do |notice| %>
          <tr>
            <td><%= notice.title %></td>
            <td><%= notice.user.try(:name) %></td>
            <td><%= notice.created_at %></td>
          </tr>
        <% end %>          
      </tbody>
    </table>    
  </div> 
</div>
<br>
  </div> 
</div>
<%= link_to 'Back', groups_path %>
<script type="text/javascript">
$(document).ready(function() {
    $('#group-notice').DataTable();
} );  
</script>
