<div class="card">
	<h2><%= @group.name %></h2>
  <div class="card-header">Create Notices</div>
  <div class="card-body">
  	<%= form_for(@notice, url: group_notices_path(params[:id]), method: :post) do |f| %>
	    <div class="form-group row">
	    	Topic Title:
	      <div class="col-lg-10">
	        <%= f.text_area :title, class: "form-control", cols: "30", rows: "5", placeholder: "Enter Title" %> <br />
	        <%= f.submit %>
	      </div>
	    </div>
  	<% end %>
  </div> 
</div>